# RunPod TTS Configuration Example
# Copy this to .env and update with your pod ID

# Your RunPod TTS Endpoint (update with your pod ID)
RUNPOD_TTS_URL=https://sbwpfh7exfn63d-8888.proxy.runpod.net/api/tts

# API Key (optional - only if you enable authentication)
RUNPOD_TTS_API_KEY=

# Timeout settings
RUNPOD_TTS_TIMEOUT=60
RUNPOD_TTS_MAX_RETRIES=3

# Caching
RUNPOD_TTS_CACHE_ENABLED=true
RUNPOD_TTS_CACHE_DIR=.tts_cache

# Default voice
RUNPOD_TTS_DEFAULT_VOICE=emily-en-us

