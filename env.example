# CallWaiting TTS API - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
POSTGRES_DB=chatterbox
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# Redis Configuration (Cache & Rate Limiting)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# Server Configuration
# ============================================================================
CHATTERBOX_HOST=0.0.0.0
CHATTERBOX_PORT=8004
CHATTERBOX_DEVICE=auto  # auto, cuda, mps, cpu
ENVIRONMENT=production  # production, staging, development

# ============================================================================
# Twilio Integration (Optional)
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# LLM Integration (Optional)
# ============================================================================
# Use either Anthropic OR OpenAI
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Set to true to enable detailed metrics
ENABLE_METRICS=true

# ============================================================================
# Security
# ============================================================================
# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://*.callwaitingai.dev,https://*.callwaitingai.com

# ============================================================================
# Notes
# ============================================================================
# - Never commit this file with real credentials
# - Use a secrets manager in production (AWS Secrets Manager, HashiCorp Vault)
# - Generate API keys using: python3 scripts/generate_api_keys.py

